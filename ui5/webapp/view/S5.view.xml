<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form" 
	xmlns="sap.m" 
	controllerName="hxeneo.controller.S5"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page title="{i18n>fornecedor}" layout="ResponsiveGridLayout" showNavButton="true" navButtonPress="onBack">
		<content>
			
			<form:SimpleForm layout="ResponsiveGridLayout" editable="true">
				<form:content>
					<Label text="{i18n>codigoDoFornecedor}"/>
					<Input id="input_codigoDoFornecedor" value="{CODIGODOFORNECEDOR}" editable="false"/>

					<Label text="{i18n>nomeDaEmpresa}"/>
					<Input id="input_nomeDaEmpresa" value="{NOMEDAEMPRESA}"/>
					<Label text="{i18n>nomeDoContato}"/>
					<Input id="input_nomeDoContato" value="{NOMEDOCONTATO}"/>
					<Label text="{i18n>cargoDoContato}"/>
					<Input id="input_cargoDoContato" value="{CARGODOCONTATO}"/>
					<Label text="{i18n>endereco}"/>
					<Input id="input_endereco" value="{ENDERECO}"/>
					<Label text="{i18n>cidade}"/>
					<Input id="input_cidade" value="{CIDADE}"/>
					<Label text="{i18n>regiao}"/>
					<Input id="input_regiao" value="{REGIAO}"/>
					<Label text="{i18n>cep}"/>
					<Input id="input_cep" value="{CEP}"/>
					<Label text="{i18n>pais}"/>
					<Input id="input_pais" value="{PAIS}"/>
					<Label text="{i18n>telefone}"/>
					<Input id="input_telefone" value="{TELEFONE}"/>
					<Label text="{i18n>fax}"/>
					<Input id="input_fax" value="{FAX}"/>
					<Label text="{i18n>homePage}" />
					<Input id="input_homePage" value="{HOMEPAGE}"/>

				</form:content>
			</form:SimpleForm>
			
		</content>
		
		<footer>
			<Toolbar>
				<content>
					<ToolbarSpacer/>
					<Button text="{i18n>btnAlterar}" icon="sap-icon://save" press="onAlteraFornecedor"/>
					<Button text="{i18n>btnDelete}" icon="sap-icon://delete" press="onExcluiFornecedor"/>
				</content>
			</Toolbar>
		</footer>
		
	</Page>
	
</mvc:View>